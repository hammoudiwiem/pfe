
{% block title %}{% endblock %}
{% block body %}
    <style>
        .button {
            display: inline-block;
            padding: 15px 25px;
            font-size: 15px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            background-color: #1426ff;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
        }

        .button:hover {background-color: #1426ff
        }

        .button:active {
            background-color: #1426ff;
            box-shadow: 0 5px #666;
            transform: translateY(4px);
        }
        input[type=text] {
            width: 50%;
            padding: 12px 20px;
            border: 1px solid #ccc;
        }
        input[type=email] {
            width: 50%;
            padding: 12px 20px;
            border: 1px solid #ccc;
        }
        input[type=date] {
            width: 100%;
            padding: 12px 20px 12px 40px;
            border: 2px solid #ccc;
            font-size: 16px;
            border-radius: 4px;

        }
        input[type=number] {
            width: 50%;
            padding: 12px 20px;
            border: 1px solid #ccc;
        }
        label {
            padding: 12px 12px 12px 0;
            display: inline-block;
        }
        div {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 3px;
        }
        .col-25 {
            float: left;
            width: 15%;
            margin-top: 6px;
        }
        .col-75 {
            width: 60%;
            margin-top: 6px;
        }
    </style>
    <fieldset>

    {{ form_start(form) }}
<div class="form-group">
    <div class="col-25">
        <label for="">Nom</label>
    </div>
    <div class="col-75">
        {{ form_widget(form.nomcandidat, {'attr':{'placeholder':'Entrez le nom du candidat...'}}) }}
    </div>
</div>
<div class="form-group">
    <div class="col-25">
        <label for="">Prenom</label>
    </div>
    <div class="col-75">
        {{ form_widget(form.prenomcandiat, {'attr':{'placeholder':'Entrez le prenom du candidat...'}}) }}
    </div>
</div>

<div class="form-group">
    <div class="col-25">
        <label for="">Mail</label>
    </div>
    <div class="col-75">
        {{ form_widget(form.mailcandidat, {'attr':{'placeholder':'Entrez le mail du candidat...'}}) }}
    </div>
</div>

<div class="form-group">
    <div class="col-25">
        <label for="">Telephone</label>
    </div>
    <div class="col-75">
    {{ form_widget(form.telephonecandidat, {'attr':{'placeholder':'Entrez le telephone du candidat...'}}) }}
    </div>
</div>

<div class="form-group">
    <div class="col-25">
        <label for="">Adresse</label>
    </div>
    <div class="col-75">
        {{ form_widget(form.adressecandidat, {'attr':{'placeholder':'Entrez adresse du candidat...'}}) }}
    </div>
    <br>
</div>
<div class="form-group">
        <div class="col-25">
            <label for="">Date de naissance </label>
            <br>
        </div>
        <div class="col-75">
            {{ form_widget(form.datenaissancecandidat) }}
        </div>
</div>

<div class="form-group">
    <div class="col-25">
        <label for="">Mot de passe</label>
    </div>
    <div class="col-75">
        {{ form_widget(form.mdpcandidat, {'attr':{'placeholder':'Entrez le mot de passe du candidat...'}}) }}
    </div>
    <br>
</div>

        <div class="form-group">
            <div class="col-25">
                <label for="">Image</label>
            </div>
            <div class="col-75">
                {{ form_widget(form.images) }}
            </div>
        </div>
    </fieldset>
    <br>
<button class="button">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}

{% endblock %}